<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:theme="@style/FilePickerItemColor">

    <ImageView
        android:id="@+id/icon"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_folder_black_24dp" />

    <CheckedTextView
        android:id="@+id/text1"
        android:text="List item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkMark="?android:attr/listChoiceIndicatorSingle"
        android:gravity="center_vertical"
        android:paddingLeft="?android:attr/listPreferredItemPaddingStart"
        android:paddingRight="?android:attr/listPreferredItemPaddingEnd"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black">
    </CheckedTextView>
</LinearLayout>